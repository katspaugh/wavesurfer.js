{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowUmdGlobalAccess": false,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "cypress",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "playwright.config.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
