{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "breakOnLoad": true,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack://WaveSurfer.[name]/./*": "${webRoot}/*",
                "webpack://WaveSurfer/./*": "${webRoot}/*",
            }
        }
    ]
}
